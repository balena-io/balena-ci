{
	"compilerOptions": {
		"module": "commonJS",
		"outDir": "build",
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2019",
		"declaration": true,
		"skipLibCheck": true,
	},
	"include": [
		"src/**/*.ts", "tests/**/*.ts", "typings/**/*.d.ts"
	]
}
